@model IEnumerable<Group20_IoT.Models.DefectiveStock>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Stock.StockCode)
        </th>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DefectiveCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DefectFound)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Resolved)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResolvedDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Stock.StockCode)
            </td>
            <td>
                @item.Users.GetFullName()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefectiveCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefectFound)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @if(item.Resolved)
                {
                    <p>Yes</p>
}
else
                {
                    <p>No</p>
                }
                
            </td>
            <td>
                @if (item.ResolvedDate == null)
                {
                    <p>-</p>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.ResolvedDate)
                }
            </td>
            <td>
                @if (!item.Resolved)
                {
                    <button class="resolve-button" data-id="@item.Id">Resolve Defect</button>
                }
            </td>
        </tr>
    }

</table>



@section scripts
{
    <script>
        $(document).ready(function () {

            var storedMessage = localStorage.getItem('notificationMessage');

            if (storedMessage) {
                notifySuccess(storedMessage);
                localStorage.removeItem('notificationMessage');
            }

        $(".resolve-button").on("click", function () {
            var ID = $(this).data("id");
            updateResolve(ID, false);
        });

        function updateResolve(ID) {
            $.ajax({
                url: '@Url.Action("ResolveDefect", "DefectiveStocks")',
                type: 'POST',
                data: { id: ID },
                dataType: 'json',
                success: function (data) {
                    localStorage.setItem('notificationMessage', data.message);
                    location.reload();
                },
                error: function () {
                    notifyError("An error occurred while resolving defect.");

                }
            });
        }
    });
    </script>


}