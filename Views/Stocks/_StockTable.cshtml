@model List<Group20_IoT.Models.ViewModel.StockViewModel>


<table class="table">
    <tr>
        <th>
            Stock Code
        </th>
        <th>
            Name
        </th>
        <th>
            Quantity
        </th>
        <th>
            Quantity Borrowed
        </th>
        <th>
            Room
        </th>
        <th>
            Storage Area
        </th>
        <th></th>
    </tr>
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.StockCode
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    @item.QuantityBorrowed
                </td>
                <td>
                    @item.Room
                </td>
                <td>
                    @item.StorageArea
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="7" style="text-align:center;font-size:16px"><strong>Sorry, no stock available</strong></td>
        </tr>
    }
    </table>
