<body style="background-color: #1a2740">

    <div class="login-box">
        <h2>Login</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="user-box">
                @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "input" } })
                <label>Email</label>
                <div class="validation-message">@Html.ValidationMessageFor(x => x.Email)</div>

            </div>
            <div class="user-box">
                @Html.PasswordFor(x => x.Password, new { @class = "password-input" })
                <label>Password</label>
                <span class="eye-icon" onclick="togglePasswordVisibility()">&#x1F441;</span>
                <div class="validation-message">
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
            </div>
            <div class="user-box remember-me" style="text-align: center;">
                @Html.CheckBoxFor(x => x.RememberMe, new { @class = "checkbox" })
                <label for="RememberMe">Remember Me</label>
            </div>
            <button type="submit" class="forgot-password-button">
                <span></span>
                <span></span>
                Login
            </button>
        }
        <a href="@Url.Action("ForgotPassword", "Login")" class="list-group-item list-group-item-action bg-light">
            <button class="forgot-password-button">Forgot Password?</button>
        </a>
    </div>

    <script>
        function togglePasswordVisibility() {
            var passwordInput = document.querySelector('.password-input');
            var eyeIcon = document.querySelector('.eye-icon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.innerHTML = '&#x1F440;'; // Unicode for closed eye
            } else {
                passwordInput.type = 'password';
                eyeIcon.innerHTML = '&#x1F441;'; // Unicode for open eye
            }
        }
    </script>
