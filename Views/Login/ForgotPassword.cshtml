        color: #ff5555; /* Red color for error messages */
        font-size: 14px;
        margin-top: 5px;
    }

    /* Add this style for success messages if needed */
    .validation-success {
        color: #00cc00; /* Green color for success messages */
        font-size: 14px;
        margin-top: 5px;
    }
</style>


<div class="login-box">
    <h2>Forgot Password</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="user-box">
            @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "input" } })
            <label>Email</label>
            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "validation-message" })
        </div>
        <button type="submit" class="forgot-password-button">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            Submit
        </button>
    }
    <a href="@Url.Action("Index", "Login")" class="list-group-item list-group-item-action bg-light">
        <button class="forgot-password-button">Back To Login</button>
    </a>
</div>

