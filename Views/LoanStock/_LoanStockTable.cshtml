@model IEnumerable<Group20_IoT.Models.ViewModel.LoanStockViewModel>

<div class="card-body">
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="card">
                <div style="text-align:center"><img src="~/Content/Images/@item.ImageFile" class="card-img-top" alt="@item.ImageFile" style="max-height: 200px; max-width: 200px;"></div>
                <div class="card-body">
                    <h3 class="card-title"><strong>@Html.DisplayFor(modelItem => item.Name)</strong></h3>
                    <br />
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    <p class="card-text"><strong>Stock Code:</strong> @Html.DisplayFor(modelItem => item.StockCode)</p>
                    @if (item.QuantityCanLoan == 0)
                    {
                        <p class="card-text">
                            <strong>Available Quantity To Loan:</strong> <strong style="color:red">Out Of Stock</strong>
                        </p>
                    }
                    else
                    {
                        <p class="card-text"><strong>Available Quantity To Loan:</strong> @Html.DisplayFor(modelItem => item.QuantityCanLoan)</p>
                    }

                    @if (item.QuantityCanLoan > 0)
                    {
                        @Html.ActionLink("Loan", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                    }
                </div>
            </div>

        }
    </div>
    </div>